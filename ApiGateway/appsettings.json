{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "products": {
        "ClusterId": "products",
        "Match": {
          "Path": "/api/products/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/products" },
          { "PathPrefix": "/products" }
        ]
      },
      "orders": {
        "ClusterId": "orders",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/orders" },
          { "PathPrefix": "/orders" }
        ]
      }
    },
    "Clusters": {
      "products": {
        "Destinations": {
          "productservice": {
            "Address": "http://productservice:8080/"
          }
        }
      },
      "orders": {
        "Destinations": {
          "orderservice": {
            "Address": "http://orderservice:8080/"
          }
        }
      }
    }
  }
}
